<%if @questions.errors.any?%>
      <%@questions.errors.full_messages.each do |message|%>
        <p><%=message%></p>
      <%end%>
    <%end%>
  <%=form_for @questions, remote: true do |f| %>
      <br>
      <%= f.text_field :title, placeholder: "title" %>
      <br>
      <br>
      <%= f.text_area :content, placeholder: "content"%>
      <br>
      <br>
     <%=submit_tag "Submit New Question", class: "btn btn-success" %>
    <% end %>
